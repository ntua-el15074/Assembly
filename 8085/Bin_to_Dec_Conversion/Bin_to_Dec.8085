START: 
	LDA 2000H		
	CPI 63H		
	JNC RIGHT_FLICKER	
	MVI B,FFH
	JMP DECA		
RIGHT_FLICKER:		
	CPI C7H		
	JNC LEFT_FLICKER	
	MVI A,F0H		
	STA 3000H		
	MVI A,FFH		
	STA 3000H		
				
	JMP START		
				
LEFT_FLICKER:			
	MVI A,0FH		
	STA 3000H		
	MVI A,FFH		
	STA 3000H		
	JMP START		
				
DECA:
	INR B
	SUI 0AH
	JNC DECA
	ADI 0AH
	MOV E,A
	MOV A,B
	RLC
	RLC
	RLC
	RLC
	ADD E
	CMA
	STA 3000H
	JMP START	
END
